<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--Profile Image-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                app:srcCompat="@drawable/ic_profile"
                tools:ignore="VectorDrawableCompat"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <!--Writer-->
                <TextView
                    android:id="@+id/ViewWriter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:text="Writer"
                    android:textAlignment="textStart"></TextView>

                <!--Date-->
                <TextView
                    android:id="@+id/ViewDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:text="Date"
                    android:textAlignment="textStart"></TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!--Edit Ok Button-->
                <ImageButton
                    android:id="@+id/ViewOkBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:enabled="false"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_ok"
                    tools:ignore="VectorDrawableCompat"></ImageButton>

                <!--Edit Button-->
                <ImageButton
                    android:id="@+id/ViewEditBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:srcCompat="@drawable/ic_edit_btn"
                    tools:ignore="VectorDrawableCompat"></ImageButton>

                <!--Delete Button-->
                <ImageButton
                    android:id="@+id/ViewDeleteBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:onClick="OnDeleteHandler"
                    app:srcCompat="@drawable/ic_delete_btn"
                    tools:ignore="VectorDrawableCompat"></ImageButton>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--Title TextView-->
                <EditText
                    android:id="@+id/Viewtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="제목"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <!--Contents TextView-->
                <EditText
                    android:id="@+id/Viewcontents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Viewtitle"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:text="내용"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@color/black"
                    android:textSize="17.6dp"
                    android:textStyle="normal" />


                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/Viewcontents"/>

                    <me.relex.circleindicator.CircleIndicator3
                        android:id="@+id/indicator"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:ci_drawable="@drawable/black_round"
                        app:ci_height="7dp"
                        app:ci_margin="4dp"
                        app:ci_width="7dp"
                        tools:ignore="MissingClass"
                        android:layout_below="@+id/viewPager2"
                        android:gravity="top"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
